<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.windows10.myapplication.MainActivity">
    <TextView
        android:id="@+id/texView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="亿贝在线娱乐"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />
    <EditText
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="请输入你的账号"
        android:textSize="14sp"
        android:textColorHint="#b7b2b2"
        android:id="@+id/editText1"
        android:layout_alignParentTop="true"

        android:layout_marginTop="101dp" />
    <EditText
        android:layout_below="@id/editText1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="请输入你的密码"
        android:layout_alignLeft="@id/editText1"
        android:layout_alignStart="@id/editText1"
        android:textSize="14sp"
        android:textColorHint="#b7b2b2"
        android:id="@+id/editText2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_below="@id/editText2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="请输入验证码"
        android:textSize="14sp"
        android:textColorHint="#b7b2b2"
        android:id="@+id/editText3"
        android:layout_centerHorizontal="true" />

    <com.sky.support.identifycode.IdentifyCodeView
        android:layout_marginTop="10dp"
        android:id="@+id/code"
        android:layout_below="@id/editText2"
        android:textColor="#eeeeee"
        android:background="#000000"
        android:layout_alignRight="@id/editText2"
        android:layout_width="120dp"
        android:layout_height="60dp" />

    <Button
        android:layout_width="320dp"
        android:background="@drawable/general_btn_selector"
        android:layout_height="30dp"
        android:layout_below="@id/editText3"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:text="登录"
        android:id="@+id/button" />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/button"
        android:layout_alignLeft="@id/button"
        android:textSize="16sp"
        android:text="联系客服"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

</RelativeLayout>
